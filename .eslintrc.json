{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended",
    "prettier"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "flowtype"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "worker": true,
    "jest": true
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/no-array-index-key": "off",
    "import/prefer-default-export": "warn",
    "class-methods-use-this": "warn",
    "react/prop-types": "off",
    "react/prefer-stateless-function": "off",
    "linebreak-style": "off"
  }
}
